<div class="container">

  <div class="head-container">
    <div class="row">
      <div class="col-10 hello-user ">
        <h1>Bonjour placeholder, tu cherches un jeu?</h1>
      </div>
      <div class="col-2 head-buttons text-center">
        <div class="btn btn-primary m-1">MENU</div>
        <%= link_to '+', new_game_path, class: "btn btn-primary m-1" %>
      </div>
    </div>
  </div>

  <div class="filters-container mt-2">
    <div class="row">
      <div class="col">
        <p>Filter 1: Localisation</p>
      </div>
      <div class="col">
        <p>Filter 2: Choix du jeu</p>
      </div>
    </div>
  </div>

  <div class="games-container mt-2">
    <% @games.each do |game| %>
      <div class="game-card">
        <h3><%= game.name%></h3>
        <p><i>publi√© par</i> <%= game.user_id%></p>
        <h3><%= game.address%></h3>
        <div class="show-button btn btn-primary">SHOW</div>
      </div>
    <% end %>
  </div>

</div>
