<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
    <%= simple_form_for @game do |f| %>
    <%= f.input :name, 
                placeholder: "Nom du jeu",
                label: "Jeu" %>
    <%= f.input :description,
                placeholder: "Description du jeu",
                label: "Description" %>
    <%= f.input :price_per_day,
                placeholder: "5",
                label: "Prix par jour" %>
    <%= f.input :address,
                label: "Adresse",
                input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                wrapper_html: {
                  data: {
                    controller: "address-autocomplete",
                    address_autocomplete_api_key_value: ENV['MAPBOX_API_KEY']
                    }} %>
    <%= f.input :picture, as: :file %>
    <div class="text-center">
      <%= f.button :submit, "SAUVEGARDER", class: "btn btn-primary" %>
      <%= link_to "ANNULER", games_path, class: "btn btn-danger text-white" %>
    </div>
    <% end %>
    </div>
  </div>
</div>